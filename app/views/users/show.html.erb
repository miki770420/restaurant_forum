<div class= "container">
  <div class="col-md-4 well">
    leave it for image
  </div>
  <div class="col-md-4 well">
    <ul class="list-unstyled">
      <li><strong><h2><%= @user.name %></h2></strong></li>
      <li><strong><h6><%= @user.email %></h6></strong></li>
      <li><h5><%= @user.intro %></h5></li>
      <% if current_user == @user %>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
      <% end %>
    </ul>
  </div>
</div>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @commented_restaurants.count %> Comments</h3>
    </div>
    <div class="panel-body">
      <% @commented_restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant) do %>
        <div class="my-restaurant">
          <div>
            <%= image_tag "http://lorempixel.com/400/200/food", class: "img-responsive center-block" %>
          </div>
            <h5><%= restaurant.name %></h5>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
