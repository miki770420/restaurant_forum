<div class= "container">
  <% if @user.errors.any? %>
    <h4 class="text-danger">We have some errors here!</h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="text-danger"><%= msg %></li> 
      <% end %>
    </ul>
  <% end %>
</div>


<div class= "container">
  <h2>Edit Profile</h2>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :intro, "Self Intro" %>
      <%= f.text_area :intro, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :avatar, "Avatar" %>
      <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>
    <%= f.submit "Update", class: "btn btn-primary" %>
    <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
  <% end %>
</div>