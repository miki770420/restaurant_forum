<% if @restaurant.errors.any? %>
  <h2>We have some errors here!</h2>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li> 
    <% end %>
  </ul>
<% end %>


<form class="form-inline">
  <%= form_for [:admin, @restaurant] do |f| %>
    <div class="form-group">
      <label for="restaurant_name">Name</label>
      <input type="text" class="form-control" id="restaurant_name" placeholder="Jane Doe">
    </div>
    <div class="form-group">
      <label for="restaurant_tel">Tel</label>
      <input type="text" class="form-control" id="restaurant_tel" placeholder="##-########">
    </div>
    <div class="form-group">
      <label for="restaurant_address">Address</label>
      <input type="text" class="form-control" id="restaurant_address">
    </div>
    <div class="form-group">
      <label for="restaurant_opening_hours">Open Hours</label>
      <input type="text" class="form-control" id="restaurant_opening_hours" placeholder="18:00">
    </div>
    <br></br>
     <div class="form-group">
      <label for="restaurant_description">Description</label>
      <textarea class="form-control" rows="3" id="restaurant_description"></textarea>
    </div>
    <div class="form-group">
      <label for="restaurant_image">Photo</label>
      <input type="file" class="form-control" id="restaurant_image" name="restaurant[image]">
      <%= image_tag @restaurant.image, width: '300px' if @restaurant.image? %>
    </div>
    <%= f.submit %>
  <% end %>
</form>

